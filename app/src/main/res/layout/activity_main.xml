<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/textvAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Altura:"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittAltura"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Escriba la altura"
        app:layout_constraintStart_toEndOf="@+id/textvAltura"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textvPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Peso:"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/edittAltura" />

    <EditText
        android:id="@+id/editTex2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Escriba el peso"
        app:layout_constraintStart_toStartOf="@id/edittAltura"
        app:layout_constraintTop_toBottomOf="@id/edittAltura"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Edad:"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/editTex2" />

    <EditText
        android:id="@+id/editTex3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Escriba la edad"
        app:layout_constraintStart_toStartOf="@id/editTex2"
        app:layout_constraintTop_toBottomOf="@id/editTex2" />

    <ImageButton
        android:id="@+id/imagebMas"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/ic_add_round"
        app:layout_constraintStart_toEndOf="@id/editTex3"
        app:layout_constraintTop_toTopOf="@id/editTex3"
        />

    <ImageButton
        android:id="@+id/imagebMenos"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/ic_less_round"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/imagebMas"
        app:layout_constraintTop_toTopOf="@id/editTex3"
         />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="54dp"
        android:layout_height="49dp"
        android:clickable="true"
        app:backgroundTint="#2A7515"
        app:srcCompat="@drawable/ic_add_foreground"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="214dp" />


</androidx.constraintlayout.widget.ConstraintLayout>